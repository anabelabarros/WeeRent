
<h1 style="margin-left: 20px ">Item Details</h1>
<%# Displays details of a single booking %>
<%= stylesheet_link_tag 'application' %>

<div class="product-card" style="border: 1px solid #ccc; padding: 20px; margin: 10px auto; width: 800px;">
  <div class="product-card__media">
    <%= cl_image_tag @item.photo.key, width: 200, crop: :fill %>
  </div>
  <div class="product-card__info">
    <h2 class="product-card__title"><%= @item.name %></h2>
    <p class="product-card_description"><%= @item.description %></p>
    <p class="product-card__price">Â£<%= @item.price %></p>
    <h1>New Booking</h1>

    <%= simple_form_for [@item, @booking] do |f| %>
      <!-- Add form fields for booking attributes -->
      <%= f.input :start_date %>
      <%= f.input :end_date %>

      <!-- Add other form fields as needed -->
      <%= f.submit "Book this item", class:"product-card__button"%>
    <% end %>
    <br>
    <%= link_to "Back To Items", items_path %>
  </div>
</div>
